{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/stylemio.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body -%}

<div id="fixedtop" class="clearfix">
	<div id="headercont" class="clearfix">
    	<div id="headerleft">
        	<a title="" href="#"><img alt="" src="{{ asset('images/logo-example.jpg') }}" /><!--</a><h1>HOTEL MITRA</h1>-->
        </div>
       	<div id="headerright">
            <div class="menu">
                <ul>
                    <li><a title="" href="{{ path('principal')}}">Inicio</a></li>
                    <li class="active"><a title="">Platos</a></li>
                    <li><a title="" href="{{ path('fincomanda')}}">Comanda</a></li>
                    <li><a title="" href="">Pedir</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div id="maincont" class="clearfix">
    <div id="main">
